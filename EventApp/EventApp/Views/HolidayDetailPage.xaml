<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventApp.Views.HolidayDetailPage"
             xmlns:local="clr-namespace:EventApp"  
             Title="{Binding Title}">
             

        <StackLayout VerticalOptions="FillAndExpand" Padding="0" Spacing="0">




            <ContentView BackgroundColor="#f5f5f5" Padding="0">
                
            <ListView x:Name="HolidayDetailList"
                     
                      SeparatorVisibility="None"
                        ItemsSource="{Binding GroupedCommentList}"
                        BackgroundColor="#F2F2F2"
                        HasUnevenRows="true"
                        IsGroupingEnabled="true"
                        RefreshCommand="{Binding LoadHolidayComments}"
                        IsPullToRefreshEnabled="true"
                        IsRefreshing="{Binding IsBusy, Mode=OneWay}">

                <ListView.Header>

                  <StackLayout Spacing="0" Orientation="Vertical" BackgroundColor="White">

                        <ContentView Padding="10">
                      <Label x:Name="Description" FontSize="Small"/>
                        </ContentView>
                        <Grid Padding="10" HorizontalOptions="FillAndExpand" >
                      <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="15*" />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="10*" />
                                <ColumnDefinition Width="16" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="16" />
                      </Grid.ColumnDefinitions>

                      <ContentView Grid.Column="0">
                        <Image Source="comment.png" VerticalOptions="Center" >

                            <Image.GestureRecognizers>
                                <TapGestureRecognizer
                            Tapped="OnCommentPicTapped"  />
                            </Image.GestureRecognizers>
                        </Image>

                        </ContentView>
                            
                            

                      <Label Grid.Column="1" Text="Comment" FontSize="12"
                         VerticalTextAlignment="Center" Margin="0,-2,0,0">
                        <Label.GestureRecognizers>
                          <TapGestureRecognizer
                          Tapped="OnTapGestureRecognizerTapped"  />
                        </Label.GestureRecognizers>
                      </Label>



                    <ContentView Grid.Column="2" >
                        
                        <Image Source="share.png" VerticalOptions="Center">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer
                                    Tapped="OnSharePicTapped"  />
                            </Image.GestureRecognizers>
                        </Image>
                    </ContentView>

                    <Label Grid.Column="3" Text="Share" FontSize="12"
                            VerticalTextAlignment="Center" Margin="0,-2,0,0">
                        <Label.GestureRecognizers>
                        <TapGestureRecognizer
                            Tapped="OnShareTapped"  />
                        </Label.GestureRecognizers>
                    </Label>

                            <Image Source="down.png" Grid.Column="5" Opacity=".5" x:Name="DownVoteImage">
                                <Image.GestureRecognizers>
                                <TapGestureRecognizer
                                Tapped="DownVote"
                                NumberOfTapsRequired="1" />
                                </Image.GestureRecognizers>
                            </Image>

                      <Label Text="{Binding Votes}" FontSize="Small" HorizontalTextAlignment="End" Grid.Column="6"
                             VerticalTextAlignment="Center" Margin="0,-2,0,0"  x:Name="CurrentVotes">
                      </Label>

                      <Image Source="up.png" Grid.Column="7"  Opacity=".5" x:Name="UpVoteImage">
                        <Image.GestureRecognizers>
                          <TapGestureRecognizer
                  Tapped="UpVote" 
                  NumberOfTapsRequired="1" />
                        </Image.GestureRecognizers>
                      </Image>


                    </Grid>
                  </StackLayout>

                </ListView.Header>

                
                <ListView.GroupHeaderTemplate>
                    
                        <DataTemplate>
                            <ViewCell>
                            <StackLayout Spacing="0">
                                <BoxView HeightRequest="1"
                                    BackgroundColor="#DEDEDE"
                                    HorizontalOptions="FillAndExpand" />
                                <Label Text="" FontSize="5" />
                                <BoxView HeightRequest="1"
                                    BackgroundColor="#DEDEDE"
                                    HorizontalOptions="FillAndExpand" />
                            </StackLayout >
                        </ViewCell>
                        </DataTemplate>
                   
                </ListView.GroupHeaderTemplate>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell >

                            <ContentView HorizontalOptions="FillAndExpand" Padding="{Binding ThreadPadding}" BackgroundColor="White">
                             
                                <StackLayout >

                                    <Grid HorizontalOptions="FillAndExpand">
                                        <Grid.RowDefinitions>
                                          <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                          <ColumnDefinition Width="5*" />
                                          <ColumnDefinition Width="5*" />
                                        </Grid.ColumnDefinitions>

                                          <Label Text="{Binding UserName}"
                                            FontSize="12"
                                            FontAttributes="Bold"
                                            TextColor="#4c96e8"
                                            Grid.Row="0" Grid.Column="0" />
                                        
                                          <Label Text="{Binding TimeSince}"
                                               FontSize="12" 
                                                 Grid.Row="0"
                                                 Grid.Column="1"
                                                 HorizontalTextAlignment="End" 
                                                 Opacity=".8" />        
      
                                      </Grid>

                                      <Label Text="{Binding Content}" FontSize="12" />
                                            
                                            
                                            <Grid Padding="10" HorizontalOptions="FillAndExpand">
                                                <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="16" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="16" />
                                                </Grid.ColumnDefinitions>
                                            
                                                <ContentView IsVisible="{Binding ShowReply}" Grid.Column="1" HorizontalOptions="End">
                                                    <Image Opacity=".5" Source="reply.png" VerticalOptions="Center"/>
                                                </ContentView>
                                                
 
                                                <ContentView  IsVisible="{Binding ShowDelete}" Grid.Column="1" HorizontalOptions="End">
                                                    <Image  Opacity=".5" Source="delete.png" VerticalOptions="Center"/>
                                                </ContentView>
                                                
                                                <Label IsVisible="{Binding ShowReply}" Grid.Column="2" Text="Reply" FontSize="Small"
                                                       VerticalTextAlignment="Center" Margin="0,-2,8,0">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer
                                                            Tapped="OnReplyTapped"  />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                                
                                               <Label IsVisible="{Binding ShowDelete}" Grid.Column="2" Text="Delete" FontSize="Small"
                                                       VerticalTextAlignment="Center" Margin="0,-2,8,0">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer
                                                            Tapped="OnDeleteTapped"  />
                                                    </Label.GestureRecognizers>
                                                </Label>

                                                <Image Source="{Binding DownVoteStatus}" Grid.Column="3" Opacity=".5" x:Name="DownVoteImageComment">
                                                    <Image.GestureRecognizers>
                                                        <TapGestureRecognizer
                                                    Tapped="DownVoteComment"
                                                    NumberOfTapsRequired="1" />
                                                    </Image.GestureRecognizers>
                                                </Image>

                                                <Label Text="{Binding Votes}" FontSize="Small" Grid.Column="4"
                                                           VerticalTextAlignment="Center" Margin="0,-2,0,0"  x:Name="CurrentVotesComment">
                                                </Label>

                                                <Image Source="{Binding UpVoteStatus}" Grid.Column="5"  Opacity=".5" x:Name="UpVoteImageComment">
                                                    <Image.GestureRecognizers>
                                                        <TapGestureRecognizer
                                                    Tapped="UpVoteComment"
                                                    NumberOfTapsRequired="1" />
                                                    </Image.GestureRecognizers>
                                                </Image>


                                        </Grid>
                                            
                                            
                                      </StackLayout>

                                </ContentView>
                           
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.Footer>
                    <StackLayout Spacing="0">
                        <BoxView HeightRequest="1"
                                    BackgroundColor="#DEDEDE"
                                    HorizontalOptions="FillAndExpand" />
                        <Label Text="" FontSize="5" />
                    </StackLayout >
                </ListView.Footer>

            </ListView>

        </ContentView>

    </StackLayout>

  
</ContentPage>