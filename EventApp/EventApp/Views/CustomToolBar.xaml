            <Label x:Name="HeaderLabel"
                   HorizontalOptions="CenterAndExpand"
                   TextColor="#FFFFFF"
                   VerticalOptions="Center"
                   FontAttributes="Bold"
                   FontSize="Medium"
                   IsVisible="False"
                   Opacity="0"
                   Grid.Column="1"
                   Padding="0"
                   />

           <ContentView Grid.Column="0">
            <Image Source="holidaily_banner_white.png"
                    HorizontalOptions="Center"
                   VerticalOptions="Center"
                    IsVisible="True"
                    Opacity="1" 
                    x:Name="HeaderImage"/>

            <ContentView.Padding>
                <OnPlatform
                    x:TypeArguments="Thickness"
                Android="0, 15, 0, 10" iOS="5"/>
            </ContentView.Padding>
            </ContentView>
        

            <ContentView Grid.Column="2">
            <Image Source="Notification_Main_Icon.png"
                    VerticalOptions="Center"
                    x:Name="BellBtn"
                    
                    HorizontalOptions="End">
                  
                <Image.GestureRecognizers>
                <TapGestureRecognizer
                    Tapped="OpenNotifications"  />
                </Image.GestureRecognizers>      
                <Image.HeightRequest>
                <OnPlatform
                x:TypeArguments="x:Double"
                Android="32" iOS="24"/>
                </Image.HeightRequest>
            </Image>
            <ContentView.Padding>
                    <OnPlatform
                        x:TypeArguments="Thickness"
                    Android="15" iOS="10"/>
                </ContentView.Padding> 
            </ContentView>
