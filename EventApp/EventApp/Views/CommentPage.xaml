<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventApp.Views.CommentPage"
             Title="{Binding UserName, StringFormat='{0}\'s Comment'}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <!--Page Level Resources: Compatibile with Xamarin Live Player -->
            <Color x:Key="Primary">#2196F3</Color>
            <Color x:Key="Accent">#96d1ff</Color>
            <Color x:Key="LightTextColor">#999999</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentView Padding="5" BackgroundColor="#D2D2D2">
        <StackLayout>

            <Frame  HasShadow="False" CornerRadius="2" OutlineColor="#EAEAEA" Padding="10">
                <StackLayout>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>

                        <Label Text="{Binding UserName}"
                                        FontSize="12"
                                        FontAttributes="Bold"
                                        Opacity=".5" Grid.Row="0" Grid.Column="0" />

                        <Label Text="{Binding TimeSince}"
                                           FontSize="12" 
                                             Grid.Row="0"
                                             Grid.Column="1"
                                             HorizontalTextAlignment="End" 
                                             Opacity=".8" />
                    </Grid>
                    <Label Text="{Binding Content}" FontSize="16" />

                  <ContentView Margin="0, 10, 0, 10">
                  <BoxView
                    HeightRequest="1"
                    BackgroundColor="#EAEAEA"
                    HorizontalOptions="FillAndExpand" />
                  </ContentView>

                    <ContentView>
                    <Entry x:Name="ReplyCommentContent" Text="{Binding UserNameMention, StringFormat='@{0}'}" FontSize="Small" />
                  </ContentView>
                    <ContentView>
                  <Button Text="Reply" x:Name="SaveReplyButton"
                              Clicked="SubmitReply"
                              BackgroundColor="{StaticResource Primary}"
                              TextColor="White" />
                  </ContentView>
                </StackLayout>
            </Frame>

        </StackLayout>
    </ContentView>

</ContentPage>