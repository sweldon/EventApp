<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventApp.Views.NotificationsPage"
             >
    <ContentPage.Content>


      <StackLayout VerticalOptions="FillAndExpand" Padding="0" Spacing="0">
        <BoxView
               HeightRequest="1"
                   BackgroundColor="#EAEAEA"
                   HorizontalOptions="FillAndExpand" />


        <ContentView BackgroundColor="#f5f5f5" Padding="0">
          
          <ListView x:Name="NotificationsList"
                 IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                  SeparatorVisibility="None"
                  ItemsSource="{Binding Notifications}"
                  HasUnevenRows="true"
                  RefreshCommand="{Binding LoadNotifications}"
                  IsPullToRefreshEnabled="true"
                  CachingStrategy="RecycleElement"
                    
                    >
                      <ListView.BackgroundColor>
                        <OnPlatform x:TypeArguments="Color"
                        iOS="#E0E0E0"/>
                      </ListView.BackgroundColor>

            <ListView.ItemTemplate>
              <DataTemplate>
                <ViewCell>
                  <ContentView HorizontalOptions="FillAndExpand" BackgroundColor="White">
                                    
                    <ContentView.Margin>
                    <OnPlatform x:TypeArguments="Thickness"
                    Android="0,5,0,0" iOS="0,7,0,0"/>
                    </ContentView.Margin>
                                    
                      <StackLayout>
                      <BoxView
                           HeightRequest=".5"
                               BackgroundColor="#DEDEDE"
                               HorizontalOptions="FillAndExpand" >
                        
                                <BoxView.IsVisible>
                                    <OnPlatform x:TypeArguments="x:Boolean"
                                    iOS="false"
                                    Android="true"/>
                                </BoxView.IsVisible>
                            </BoxView>

                        <Grid HorizontalOptions="FillAndExpand" Padding="5,5,5,0">
                                            
                        <Grid.Padding>
                        <OnPlatform x:TypeArguments="Thickness"
                        Android="5,5,5,0" iOS="8,10,8,0"/>
                        </Grid.Padding>
                          <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                          </Grid.RowDefinitions>
                          <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="5*" />
                          </Grid.ColumnDefinitions>

                          <Label Text="{Binding Type}"
                                  FontSize="14"
                                  TextColor="#4c96e8"
                                  Grid.Row="0" Grid.Column="0"/>

                          <Label Text="{Binding TimeSince}"
                                  FontSize="12"
                                  Grid.Row="0"
                                  Grid.Column="1"
                                  HorizontalTextAlignment="End"
                                  Opacity=".8" />

                        </Grid>
                     <ContentView>
                        <ContentView.Padding>
                        <OnPlatform x:TypeArguments="Thickness"
                        Android="10,0,10,10" iOS="8,0,8,10"/>
                        </ContentView.Padding>
                          <Label Text="{Binding Content}" FontSize="14" />
                          </ContentView>
                        <BoxView
                           HeightRequest="2"
                               BackgroundColor="#DEDEDE"
                               HorizontalOptions="FillAndExpand" >
                                            
                            <BoxView.IsVisible>
                                    <OnPlatform x:TypeArguments="x:Boolean"
                                    iOS="false"
                                    Android="true"/>
                                </BoxView.IsVisible>
                        </BoxView>
                        
                      </StackLayout>

   
                    </ContentView>
                  
                </ViewCell>
              </DataTemplate>
            </ListView.ItemTemplate>


          </ListView>


        </ContentView>
      </StackLayout>
    </ContentPage.Content>
</ContentPage>