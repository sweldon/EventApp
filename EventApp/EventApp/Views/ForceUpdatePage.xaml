<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventApp.Views.ForceUpdatePage"
             Title="Update Required">

    <ContentPage.Content>



        <ContentView BackgroundColor="White" Padding="15" >
            <StackLayout VerticalOptions="FillAndExpand">

            <ContentView HorizontalOptions="FillAndExpand">
                <Image Source="holiday_banner_blue.png" />
            </ContentView>

                <Label FontSize="Medium" TextColor="#4c96e8"
                       HorizontalTextAlignment="Center"
                       Text="A major update is required to continue using Holidaily."
                       />

                <ContentView Padding="30,30,30,15">
                    <Button VerticalOptions="End" Text="Update Now" Clicked="Update"
                                BackgroundColor="#4c96e8"
                                TextColor="White" />

                </ContentView>

             
                <Label FontSize="Micro" TextColor="Gray"
                       HorizontalTextAlignment="Center"
                       Text="Note: If you have already updated, please restart the app."
                       />
          

            </StackLayout>
        </ContentView>

    </ContentPage.Content>
</ContentPage>
