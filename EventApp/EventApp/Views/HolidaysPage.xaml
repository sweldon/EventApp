<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventApp.Views.HolidaysPage"
              Title="{Binding Title}"
              xmlns:local="clr-namespace:EventApp"  
             x:Name="BrowseItemsPage">

    <StackLayout VerticalOptions="FillAndExpand" Spacing="0">

      
            <!--<ContentView Padding="3">

            <Label x:Name="TodayLabel"  BackgroundColor="White"
                HorizontalTextAlignment="Center" 
                FontSize="20" TextColor="#4c96e8"/>
 
             </ContentView>-->
        
        <StackLayout VerticalOptions="FillAndExpand" Padding="0" Spacing="0">
            <BoxView HeightRequest=".5"
                   BackgroundColor="#DEDEDE"
                   HorizontalOptions="FillAndExpand" />


            <ContentView BackgroundColor="#f5f5f5">

                <ListView x:Name="ItemsListView"
                 IsRefreshing="false" 
                  SeparatorVisibility="None"
                  ItemsSource="{Binding Holidays}"
                  HasUnevenRows="true"
                  RefreshCommand="{Binding LoadItemsCommand}"
                  IsPullToRefreshEnabled="false"
                   >

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ContentView HorizontalOptions="FillAndExpand" BackgroundColor="White" Margin="0,5,0,0">

                                    <StackLayout>
                                        <BoxView
                                           HeightRequest=".5"
                                               BackgroundColor="#DEDEDE"
                                               HorizontalOptions="FillAndExpand" />
                                        <StackLayout>
                                            <Grid HorizontalOptions="FillAndExpand" Padding="5,5,5,0" IsVisible="{Binding ShowHolidayContent}">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="70*" />
                                                    <ColumnDefinition Width="30*" />
                                                </Grid.ColumnDefinitions>

                                                <ContentView Margin="5,0,0,0"  Grid.Row="0" Grid.Column="0">


                                                    <Label Text="{Binding Name}" FontSize="14" FontAttributes="Bold" TextColor="#4c96e8">
                                                        
                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer
                                                        Tapped="LabelToHoliday"  />
                                                        </Label.GestureRecognizers>
                                                    </Label>

                                                </ContentView>
                                                <ContentView HorizontalOptions="End"  Grid.Row="0" Grid.Column="1">
                                                    <Label Text="{Binding TimeSince}"
                                                      HorizontalTextAlignment="End"
                                                           FontSize="14"
                                                       Opacity=".8" />
                                                </ContentView>

                                            </Grid>
                                            <ContentView Padding="10,0,10,0"  IsVisible="{Binding ShowHolidayContent}">
                             
                                                <Label Text="{Binding DescriptionShort}"  Grid.Row="1" FontSize="14">

                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer
                                                        Tapped="LabelToHoliday"  />
                                                    </Label.GestureRecognizers>
                                                </Label>

                                            </ContentView>

                                            <ContentView HeightRequest="150"  IsVisible="{Binding ShowHolidayContent}">


                                                <Image Source="{Binding HolidayImage}" Aspect="AspectFill" >
                                                    <Image.GestureRecognizers>
                                                        <TapGestureRecognizer
                                                        Tapped="ImageToHoliday"  />
                                                    </Image.GestureRecognizers>
                                                </Image>

                                            </ContentView>

                                            <ContentView IsEnabled="{Binding ShowAd}"  IsVisible="{Binding ShowAd}">
                                                <local:AdControlView BackgroundColor="#CDCDCD"/>
                                            </ContentView>

                                            <Grid Padding="10" HorizontalOptions="FillAndExpand"  IsVisible="{Binding ShowHolidayContent}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="16" />
                                                    <ColumnDefinition Width="15*" />
                                                    <ColumnDefinition Width="16" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="10*" />
                                                    <ColumnDefinition Width="16" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="16" />
                                                </Grid.ColumnDefinitions>

                                                <ContentView Grid.Column="0">
                                                    <Image Source="comment.png" VerticalOptions="Center" >

                                                        <Image.GestureRecognizers>
                                                            <TapGestureRecognizer
                                                    Tapped="ImageToHoliday"  />
                                                        </Image.GestureRecognizers>
                                                    </Image>

                                                </ContentView>



                                                <Label Grid.Column="1" Text="Comment" FontSize="12"
                                                     VerticalTextAlignment="Center" Margin="0,-2,0,0">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer
                                                Tapped="LabelToHoliday"  />
                                                    </Label.GestureRecognizers>
                                                </Label>



                                                <ContentView Grid.Column="2" >

                                                    <Image Source="share.png" VerticalOptions="Center">
                                                        <Image.GestureRecognizers>
                                                            <TapGestureRecognizer
                                                                     Tapped="OnSharePicTapped"  />
                                                        </Image.GestureRecognizers>
                                                    </Image>
                                                </ContentView>

                                                <Label Grid.Column="3" Text="Share" FontSize="12"
                                                             VerticalTextAlignment="Center" Margin="0,-2,0,0">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer
                                                             Tapped="OnShareTapped"  />
                                                    </Label.GestureRecognizers>
                                                </Label>

  


                                            </Grid>


                                        </StackLayout>


                                        <BoxView
                                            HeightRequest="1"
                                            BackgroundColor="#DEDEDE"
                                            HorizontalOptions="FillAndExpand" />

                                    </StackLayout>


                                </ContentView>

                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.Footer>
                        <StackLayout Spacing="0">
                            <Label Text="" FontSize="5" />
                        </StackLayout >
                    </ListView.Footer>

                </ListView>


            </ContentView>
        </StackLayout>
        

    </StackLayout>
   
</ContentPage>