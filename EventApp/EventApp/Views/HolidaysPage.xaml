<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventApp.Views.HolidaysPage"
              Title="{Binding Title}"
              xmlns:local="clr-namespace:EventApp"  
             x:Name="BrowseItemsPage">

    <StackLayout VerticalOptions="FillAndExpand" Spacing="0">


        <!--<ContentView Padding="3">

            <Label x:Name="TodayLabel"  BackgroundColor="White"
                HorizontalTextAlignment="Center" 
                FontSize="20" TextColor="#4c96e8"/>
 
             </ContentView>-->

        <StackLayout VerticalOptions="FillAndExpand" Padding="0" Spacing="0">
            <BoxView HeightRequest=".5"
                   BackgroundColor="#DEDEDE"
                   HorizontalOptions="FillAndExpand" />


            <ContentView BackgroundColor="#f5f5f5">

                <ListView x:Name="ItemsListView"
                 IsRefreshing="false" 
                  SeparatorVisibility="None"
                  ItemsSource="{Binding Holidays}"
                  HasUnevenRows="true"
                  RefreshCommand="{Binding LoadItemsCommand}"
                  IsPullToRefreshEnabled="false"
                   >
                    <ListView.BackgroundColor>
                        <OnPlatform x:TypeArguments="Color"
                        iOS="#E0E0E0"/>
                    </ListView.BackgroundColor>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ContentView HorizontalOptions="FillAndExpand" BackgroundColor="White">

                                    <ContentView.Margin>
                                        <OnPlatform x:TypeArguments="Thickness"
                                    Android="0,5,0,0" iOS="0,7,0,0"/>
                                    </ContentView.Margin>

                                    <StackLayout>
                                        <BoxView
                                           HeightRequest=".5"
                                               BackgroundColor="#DEDEDE"
                                               HorizontalOptions="FillAndExpand" >

                                            <BoxView.IsVisible>
                                                <OnPlatform x:TypeArguments="x:Boolean"
                                                    iOS="false"
                                                    Android="true"/>
                                            </BoxView.IsVisible>
                                        </BoxView>

                                        <StackLayout>
                                            <Grid HorizontalOptions="FillAndExpand" IsVisible="{Binding ShowHolidayContent}">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="70*" />
                                                    <ColumnDefinition Width="30*" />
                                                </Grid.ColumnDefinitions>

                                                <Grid.Padding>
                                                    <OnPlatform x:TypeArguments="Thickness"
                                                Android="5,5,5,0" iOS="8,10,8,0"/>
                                                </Grid.Padding>
                                                <ContentView Margin="5,0,0,0"  Grid.Row="0" Grid.Column="0">


                                                    <Label Text="{Binding Name}" FontSize="15" FontAttributes="Bold" TextColor="#4c96e8">

                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer
                                                        Tapped="LabelToHoliday"  />
                                                        </Label.GestureRecognizers>
                                                    </Label>

                                                </ContentView>
                                                <ContentView HorizontalOptions="End"  Grid.Row="0" Grid.Column="1">
                                                    <Label Text="{Binding TimeSince}"
                                                      HorizontalTextAlignment="End"
                                                           FontSize="15"
                                                       Opacity=".8" />
                                                </ContentView>

                                            </Grid>
                                            <ContentView IsVisible="{Binding ShowHolidayContent}">

                                                <ContentView.Padding>
                                                    <OnPlatform x:TypeArguments="Thickness"
                                                    Android="10,0,10,0" iOS="14,0,14,5"/>
                                                </ContentView.Padding>

                                                <Label Text="{Binding DescriptionShort}"  Grid.Row="1" FontSize="14">

                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer
                                                        Tapped="LabelToHoliday"  />
                                                    </Label.GestureRecognizers>
                                                </Label>

                                            </ContentView>

                                            <ContentView HeightRequest="150"  IsVisible="{Binding ShowHolidayContent}">


                                                <Image Source="{Binding HolidayImage}" Aspect="AspectFill" >
                                                    <Image.GestureRecognizers>
                                                        <TapGestureRecognizer
                                                        Tapped="ImageToHoliday"  />
                                                    </Image.GestureRecognizers>
                                                </Image>

                                            </ContentView>

                                            <Grid Padding="20, 0, 20, 0" HorizontalOptions="FillAndExpand"  IsVisible="{Binding ShowHolidayContent}">

                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="16" />
                                                    <ColumnDefinition Width="10*" />
                                                    <ColumnDefinition Width="16" />
                                                    <ColumnDefinition Width="8*" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="16" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <ContentView Grid.Column="0">
                                                    <Image Source="comment.png" VerticalOptions="Center" >

                                                        <Image.GestureRecognizers>
                                                            <TapGestureRecognizer
                                                    Tapped="ImageToHoliday"  />
                                                        </Image.GestureRecognizers>
                                                    </Image>

                                                </ContentView>



                                                <Label Grid.Column="1"  Grid.Row="0" Text="{Binding NumComments, StringFormat='({0})'}" FontSize="Small"
                                                     VerticalTextAlignment="Center" Margin="0,-4,0,0" >
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer
                                                Tapped="LabelToHoliday"  />
                                                    </Label.GestureRecognizers>
                                                </Label>



                                                <ContentView Grid.Column="2" >

                                                    <Image Source="share.png" VerticalOptions="Center">
                                                        <Image.GestureRecognizers>
                                                            <TapGestureRecognizer
                                                                     Tapped="OnSharePicTapped"  />
                                                        </Image.GestureRecognizers>
                                                    </Image>
                                                </ContentView>

                                                <Label Grid.Column="3" Text="Share" FontSize="12"
                                                             VerticalTextAlignment="Center" Margin="0,-2,0,0">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer
                                                             Tapped="OnShareTapped"  />
                                                    </Label.GestureRecognizers>
                                                </Label>

                                 
                                                    <Image Source="{Binding CelebrateStatus}" Grid.Column="5"  x:Name="UpVoteImage" >
                                                        <Image.GestureRecognizers>
                                                            <TapGestureRecognizer
                                                            Tapped="OnCelebratePicTapped"
                                                            NumberOfTapsRequired="1" />
                                                        </Image.GestureRecognizers>
                                                    </Image>
                                                
                                                    <Label Grid.Column="6"  Grid.Row="0" Text="{Binding Votes, StringFormat='{0} Celebrating!'}" FontSize="Small" VerticalOptions="FillAndExpand"
                                                           VerticalTextAlignment="Center" Margin="0,-1,0,0" >
                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer
                                                                Tapped="OnCelebrateTapped"  />
                                                        </Label.GestureRecognizers>
                                                    </Label>
                                       

                                            </Grid>


                                        </StackLayout>

                                        <!-- Looks weird on iphone, disable it -->
                                        <BoxView
                                            HeightRequest="1"
                                            BackgroundColor="#DEDEDE"
                                            HorizontalOptions="FillAndExpand" >

                                            <BoxView.IsVisible>
                                                <OnPlatform x:TypeArguments="x:Boolean"
                                                    iOS="false"
                                                    Android="true"/>
                                            </BoxView.IsVisible>
                                        </BoxView>

                                    </StackLayout>


                                </ContentView>

                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.Footer>
                        <StackLayout Spacing="0">
                            <Label Text="" FontSize="5" />
                        </StackLayout >
                    </ListView.Footer>



                </ListView>


            </ContentView>

        </StackLayout>

    </StackLayout>

</ContentPage>