<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventApp.Views.HolidaysPage"
              Title="{Binding Title}"
             x:Name="BrowseItemsPage">

    <StackLayout Spacing="0">
            
        <Frame HasShadow="False" OutlineColor="#EAEAEA" Padding="0">
            <StackLayout Spacing="0" Padding="0" Margin="0">
                <Label x:Name="MonthLabel" 
                    HorizontalTextAlignment="Center" 
                    FontSize="30"/>
                <Label x:Name="DayNumberLabel" 
                    HorizontalTextAlignment="Center"
                    FontSize="55"/>
            </StackLayout>
        </Frame>
            
        <ContentView Padding="5,0,5,5" BackgroundColor="#D2D2D2" VerticalOptions="FillAndExpand">

            <StackLayout>

                <ListView x:Name="ItemsListView"

                  SeparatorVisibility="None"
                    ItemsSource="{Binding Items}"
                    BackgroundColor="#D2D2D2"
                    HasUnevenRows="true"
                    RefreshCommand="{Binding LoadItemsCommand}"
                    IsPullToRefreshEnabled="true"
                    IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                    >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>

                                <ContentView HorizontalOptions="FillAndExpand">
                                    <Frame Margin="0,5,0,0" CornerRadius="2" HasShadow="False" Padding="10" >
                                        <StackLayout>
                                            <Grid HorizontalOptions="FillAndExpand">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="7*" />
                                                    <ColumnDefinition Width="3*" />
                                                </Grid.ColumnDefinitions>

                                                <Label Text="{Binding Name}"
                                                    FontSize="16"
                                                    FontAttributes="Bold" Grid.Row="0" Grid.Column="0" TextColor="#2196F3"/>

                                                <Label Text="{Binding TimeSince}"
                                                    FontSize="12" 
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    HorizontalTextAlignment="End" 
                                                    Opacity=".8" />

                                            </Grid>

                                            <Label Text="{Binding Description}" FontSize="14" />
                                            <BoxView 
                                                    HeightRequest="1" 
                                                    BackgroundColor="#EAEAEA" 
                                                    HorizontalOptions="FillAndExpand" />

                                            <Grid HorizontalOptions="FillAndExpand">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width=".5*" />
                                                    <ColumnDefinition Width="9*" />
                                                </Grid.ColumnDefinitions>

                                                <ContentView Grid.Column="0">
                                                    <Image Source="comment.png" VerticalOptions="Center"/>
                                                </ContentView>

                                                <Label Grid.Column="1" Text="{Binding NumComments, StringFormat='Comments ({0})'}" FontSize="Small"
                                                        VerticalTextAlignment="Center" Margin="0,-2,0,0" >
                                                </Label>

                                            </Grid>
                                        </StackLayout>

                                    </Frame>
                                    
                                </ContentView>

                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
   
             
            </StackLayout>
        </ContentView>


        

    </StackLayout>
</ContentPage>