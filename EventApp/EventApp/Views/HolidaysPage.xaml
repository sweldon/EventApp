<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventApp.Views.HolidaysPage"
              Title="Holidaily"
              xmlns:local="clr-namespace:EventApp"  
             x:Name="BrowseItemsPage">
      
    <StackLayout Spacing="0" BackgroundColor="#D2D2D2">

        <Frame Margin="5" HasShadow="False" CornerRadius="2" Padding="10">
            <StackLayout Spacing="0" Padding="0" Margin="0">
                <Label x:Name="TodayLabel" 
                    HorizontalTextAlignment="Center" 
                    FontSize="24" TextColor="#2196F3"/>
                <!--<Label x:Name="MonthLabel" 
                    HorizontalTextAlignment="Center" 
                    FontSize="30"/>
                <Label x:Name="DayNumberLabel" 
                    HorizontalTextAlignment="Center"
                    FontSize="55"/>-->
            </StackLayout>
        </Frame>

        <!--<Frame HasShadow="False" CornerRadius="0" Padding="5" Margin="0, 5, 0, 0">
            <StackLayout>
                <Label Text="Hello!" 
                    HorizontalTextAlignment="Center"
                    FontSize="15"/>
            </StackLayout>
        </Frame>-->

        <ContentView Padding="0" VerticalOptions="FillAndExpand">

            <StackLayout>

                <ListView x:Name="ItemsListView"
                   IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                    SeparatorVisibility="None"
                    IsGroupingEnabled="true"
                    ItemsSource="{Binding GroupedHolidayList}"
                    BackgroundColor="#D2D2D2"
                    HasUnevenRows="true"
                    RefreshCommand="{Binding LoadItemsCommand}"
                    IsPullToRefreshEnabled="true"
                    CachingStrategy="RecycleElement"
                       
                    >
                        
                    <ListView.GroupHeaderTemplate>
                        <DataTemplate>
                            <ViewCell>

                                <ContentView>
                                    <Grid Padding="10" HorizontalOptions="FillAndExpand">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width=".5*" />
                                            <ColumnDefinition Width="9*" />
                                        </Grid.ColumnDefinitions>
            
                                        <ContentView Grid.Column="0">
                                            <Image Source="{Binding HeadingImage}" VerticalOptions="Center"/>
                                        </ContentView>

                                        <Label Text="{Binding Heading}" Grid.Column="1" FontAttributes="Bold" />
                                    </Grid>
                                   
                                </ContentView>
              
                            </ViewCell>
                        </DataTemplate>
                    </ListView.GroupHeaderTemplate>
                        
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>

                                <ContentView HorizontalOptions="FillAndExpand">
                                    <Frame Margin="5"  CornerRadius="0" HasShadow="False" Padding="10" >
                                        <StackLayout>
                                            <Grid HorizontalOptions="FillAndExpand">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="8*" />
                                                    <ColumnDefinition Width="2*" />
                                                </Grid.ColumnDefinitions>

                                                <Label Text="{Binding Name}"
                                                    FontSize="16"
                                                    FontAttributes="Bold" Grid.Row="0" Grid.Column="0" TextColor="#2196F3"/>

                                                <Label Text="{Binding TimeSince}"
                                                    FontSize="12" 
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    HorizontalTextAlignment="End" 
                                                    Opacity=".8" />

                                            </Grid>

                                            <Label Text="{Binding DescriptionShort}" FontSize="14" />
                                            <BoxView 
                                                    HeightRequest="1" 
                                                    BackgroundColor="#EAEAEA" 
                                                    HorizontalOptions="FillAndExpand" />

                                            <Grid HorizontalOptions="FillAndExpand">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width=".5*" />
                                                    <ColumnDefinition Width="9*" />
                                                </Grid.ColumnDefinitions>

                                                <ContentView Grid.Column="0">
                                                    <Image Source="comment.png" VerticalOptions="Center"/>
                                                </ContentView>

                                                <Label Grid.Column="1" Text="{Binding NumComments, StringFormat='Comments ({0})'}" FontSize="Small"
                                                        VerticalTextAlignment="Center" Margin="0,-2,0,0" >
                                                </Label>

                                            </Grid>
                                        </StackLayout>

                                    </Frame>
                                    
                                </ContentView>

                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                

            </StackLayout>
        </ContentView>


        <!--<local:AdControlView BackgroundColor="Red" />-->

    </StackLayout>
   
</ContentPage>